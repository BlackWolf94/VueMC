{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./lib",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es2016",
      "es2017",
      "es2018",
      "dom.iterable",
      "scripthost",
      "esnext"
    ],
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "baseUrl": "./src",
    "importHelpers": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "incremental": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "types": [
    "core-js",
    "node_modules/@types"
  ],
  "include": [
    "src/**.*"
  ],
  "exclude": [
    "node_modules",
    "test",
    "lib",
    "test/mock/*",
    "./node_modules/@babel/types/lib/index.d.ts"
  ]
}
