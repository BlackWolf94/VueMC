{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true,
    "noImplicitAny": false
  },
  "types": [
    "core-js"
  ],
  "include": ["src"],
  "exclude": ["node_modules", "test"]
}
