{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./lib",
    "typeRoots": ["node_modules/@types"],
    "noImplicitAny": false,
    "lib": [
      "dom",
      "es2016",
      "es2017",
      "es2018",
      "dom.iterable",
      "scripthost",
      "esnext"
    ],
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": ".",
    "importHelpers": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "incremental": true
  },
  "types": [
    "core-js",
    "./node_modules/@types"
  ],
  "include": ["src"],
  "exclude": ["node_modules", "test"]
}
