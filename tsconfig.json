{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true,
    "noImplicitAny": false,
    "experimentalDecorators": true
  },
  "types": [
    "core-js"
  ],
  "include": ["src"],
  "exclude": ["node_modules", "test"]
}
